---
import Layout from "../../layouts/Layout.astro";

import image01 from "../../images/venue/img01.jpg";
import imageHall from "../../images/venue/hall.jpg";
import image02 from "../../images/venue/img02.jpg";
import image03 from "../../images/venue/img03.jpg";
import imageMap from "../../images/venue/map01.jpg";
import imageReport from "../../images/venue/report01.jpg";
import imageSumiyoshi from "../../images/venue/sumiyashiTaisha.jpg";
import imageNoh from "../../images/venue/yamamotoNohTheater.jpg";
import imageCastle from "../../images/venue/osakaCastle.jpg";
import imageGeihinkan from "../../images/venue/osakaGeihinkan.jpg";

import SimpleCard from "../../components/parts/SimpleCard.astro";

const links = [
  {
    name: "Campus Location",
    link: "https://www.kindai.ac.jp/english/visit/",
  },
  {
    name: "Route",
    link: "https://www.kindai.ac.jp/english/files/visit/visit.pdf",
  },
  {
    name: "Kindai University",
    link: "https://www.kindai.ac.jp/english/",
  },
  {
    name: "Osaka",
    link: "https://www.japan.travel/en/destinations/kansai/osaka/",
  },
];
---

<Layout pageTitle="Venue">
  <div class="container">
    <div class="sectionWrapper">
      <section>
        <h2>Lecture Hall</h2>
        <div class="description">November Hall</div>
        <div class="cardWrapper">
          <SimpleCard
            image={{ src: image01.src, alt: "November Hallのイメージ画像1" }}
          />
          <SimpleCard
            image={{ src: imageHall.src, alt: "November Hallのイメージ画像2" }}
          />
        </div>
      </section>
      <section>
        <h2>Posters</h2>
        <div class="description">BLOSSOM CAFÉ 3F</div>
        <div class="cardWrapper">
          <SimpleCard
            image={{ src: image02.src, alt: "BLOSSOM CAFÉ 3Fのイメージ画像" }}
          />
        </div>
      </section>
      <section>
        <h2>Cafes and Restaurant</h2>
        <div class="cardWrapper">
          <SimpleCard
            title="Academic theater 1F, 2F, 3F"
            image={{
              src: image03.src,
              alt: "Academic theater 1F, 2F, 3Fのイメージ画像",
            }}
          />
          <SimpleCard
            title="Restaurant and Bakery Cafe"
            image={{
              src: imageReport.src,
              alt: "Restaurant and Bakery Cafeのイメージ画像",
            }}
          />
        </div>
      </section>
      <section>
        <h2>Excursion</h2>
        <div class="cardWrapper">
          <SimpleCard
            title="Sumiyoshi Taisha"
            image={{
              src: imageSumiyoshi.src,
              alt: "Sumiyoshi Taishaのイメージ画像",
            }}
          />
          <SimpleCard
            title="Yamamoto Noh Theater"
            image={{
              src: imageNoh.src,
              alt: "Yamamoto Noh Theaterのイメージ画像",
            }}
          />
          <SimpleCard
            title="Osaka Castle"
            image={{
              src: imageCastle.src,
              alt: "Osaka Castleのイメージ画像",
            }}
          />
          <SimpleCard
            title="Osaka Geihinkan"
            image={{
              src: imageGeihinkan.src,
              alt: "Osaka Geihinkanのイメージ画像",
            }}
          />
        </div>
      </section>
      <section>
        <h2>Campus Map</h2>
        <div class="cardWrapper">
          <SimpleCard
            image={{ src: imageMap.src, alt: "Campus Mapのイメージ画像" }}
            overflow
          />
        </div>
      </section>
    </div>
    <ul class="links">
      {
        links.map((link) => {
          return (
            <li>
              <div class="title">{link.name}</div>
              <a href={link.link} target="_blank" rel="noopener noreferrer">
                Visit Link
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</Layout>

<style lang="scss">
  @import "../../styles/mq.scss";

  .sectionWrapper {
    padding: 32px 0;
    @include mq() {
      padding: 56px 0;
    }
  }
  section {
    + section {
      margin-top: 20px;
      @include mq() {
        margin-top: 40px;
      }
    }

    h2 {
      font-size: 20px;
      font-weight: bold;
      @include mq() {
        font-size: 24px;
      }
    }
    .description {
      font-size: 16px;
      @include mq() {
        font-size: 18px;
      }
    }
    .cardWrapper {
      @include mq() {
        display: grid;
        gap: 32px;
        grid-template-columns: repeat(2, 1fr);
      }
    }
  }
  .links {
    li + li {
      margin-top: 24px;
    }
    .title {
      font-size: 20px;
      font-weight: bold;
      @include mq() {
        font-size: 24px;
      }
    }
    a {
      margin-top: 8px;
      border: 1px solid var(--color-border);
      border-radius: 16px;
      padding: 0 40px;
      height: 50px;
      display: inline-flex;
      align-items: center;
      font-size: 18px;
      transition: 0.3s;
      &:hover {
        background-color: #222;
        color: #fff;
      }
    }
    padding-bottom: 56px;
  }
</style>
