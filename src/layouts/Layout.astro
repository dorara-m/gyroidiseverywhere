---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from '../components/Header.astro';
import SpMenu from '../components/SpMenu.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="this is gyroidiseverywhere site." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Gyroid is everywhere</title>
	</head>
	<body class="body">
		<Header />
		<SpMenu />
		<slot />
	</body>
</html>

<style is:global lang="scss">
	@import "../styles/reset.scss";
	:root {
		--font-en: Times, serif;
		--font-heading: 'Oswald', sans-serif;
		--color-text: #454142;
		--color-border: #a2a3a8;
		--color-main: rgb(255, 42, 94);
		--color-sub: rgb(255, 140, 69);
	}

	img {
		max-width: 100%;
	}
	a {
		color: inherit;
		text-decoration: none;
	}
	// reset.cssを別のもの使うか検討
	button {
		border: none;
		background: none;
		cursor: pointer;
		font: inherit;
		padding: 0;
	}

	.body {
		font-family: var(--font-en);
		color: var(--color-text);
		line-height: 1.5;
		letter-spacing: 0.04em;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.container {
		padding: 0 24px;
		max-width: 1080px;
		margin-right: auto;
		margin-left: auto;
	}

	// コンポーネント化検討
	.paragraph {
		& + & {
			margin-top: 24px;
		}
		strong {
			font-weight: bold;
			// fontファイルimport必要かも
			font-family: "Roboto", sans-serif;
		}
		&.-caption {
			font-size: 0.8em;
		}
		a {
			text-decoration: underline;
		}
	}
	ol {
		margin-top: 8px;
		padding-left: 1.4em;
		> li {
			counter-increment: item;
			text-indent: -1.4em;
			&::before {
				content: counter(item) ")";
				margin-right: 8px;
			}
			& + li {
				margin-top: 8px;
			}
		}
	}

	.hidden {
		display: none;
	}

	.hiddenSp {
		display: block;
		@media screen and (max-width: 768px) {
			display: none;
		}
	}
</style>
