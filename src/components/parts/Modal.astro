---
interface Props {
  data: {
    imgSrc: string;
    name: string;
    detail: string;
  }[];
}

const { data } = Astro.props;
---
{data.map((item) => {
  return (
    <div class="modal">
      <button class="modal__CloseBtn"></button>
      <div class="modalContent">
        <div class="modalContent__img">
          <img src={item.imgSrc} alt={item.name} />
        </div>
        <div class="modalContent__text">
          <div class="modalContent__name">{item.name}</div>
          <div class="modalContent__detail">{item.detail}</div>
        </div>
      </div>
    </div>
  );
})}