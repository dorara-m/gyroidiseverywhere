---
interface Props {
  list: {
    title: string;
    text: string;
    link?: string;
  }[];
}

const { list } = Astro.props;
---

<div class="dlWrap">
  <dl class="dl">
    {
      list.map((item) => {
        return (
          <>
            <dt>{item.title}</dt>
            <dd>
              <a
                href={item.link || item.text}
                target="_blank"
                rel="noopener noreferrer"
              >
                {item.text}
              </a>
            </dd>
          </>
        );
      })
    }
  </dl>
</div>

<style lang="scss">
  @import "../../styles/mq.scss";

  .dlWrap {
    margin-top: 32px;
    overflow: auto;
    white-space: nowrap;
    padding-bottom: 24px;
  }
  .dl {
    font-family: var(--font-en2);
    font-size: 14px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    @include mq() {
      max-width: 80%;
    }
    dt {
      font-weight: bold;
      background: #eee;
      padding: 1rem;
    }
    dd {
      background-color: #f5f5f5;
      padding: 1rem;
      text-decoration: underline;
      a:hover {
        opacity: 0.8;
      }
    }
  }
</style>
