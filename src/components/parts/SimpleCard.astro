---
interface Props {
  title?: string;
  image: {
    src: string;
    alt: string;
  };
  overflow?: boolean;
}

const { title, image, overflow } = Astro.props;
---

<div class="simpleCard">
  {title && <div class="simpleCard__title">{title}</div>}
  <div class=`simpleCard__img ${overflow ? '-overflow': ''}`>
    <img src={image.src} alt={image.alt} />
  </div>
</div>

<style lang="scss">
  @import "../../styles/mq.scss";

  .simpleCard {
    margin-top: 8px;
    box-sizing: border-box;

    .simpleCard__title {
      font-size: 16px;
      @include mq() {
        font-size: 18px;
      }
    }
    .simpleCard__img {
      margin-top: 8px;
      aspect-ratio: 1.7 / 1;
      overflow: hidden;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      &.-overflow {
        aspect-ratio: unset;
      }
    }
  }
</style>
