---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="pageHeader">
	<div class="container">
		<h1>{title}</h1>
	</div>
</div>

<style lang="scss">
	@import "../styles/mq.scss";

	.pageHeader {
		padding: 16px 0;
		font-family: var(--font-heading);
		background: linear-gradient(
			308deg,
			var(--color-sub) 30%,
			var(--color-main) 100%
		);
		@include mq() {
			padding: 102px 0 24px;
		}
		h1 {
			font-size: 40px;
			color: #fff;
			font-weight: bold;
			animation: fadeIn 0.5s ease-in-out;
			@keyframes fadeIn {
				0% {
					opacity: 0;
					transform: translateX(30%);
				}
				100% {
					opacity: 1;
				}
			}
			@include mq() {
				font-size: 48px;
				animation-duration: 0.8s;
			}
		}
	}
</style>

<script>
	// homeでは非表示
	if (location.pathname === '/') {
		document.querySelector('.pageHeader')?.classList.add('hidden');
	}
</script>

