---
interface Props {
  title: string;
  lang?: string;
}

const { title, lang } = Astro.props;
---

<div class=`pageHeader ${lang ? lang : ''}`>
  <div class="container">
    <h1>{title}</h1>
  </div>
</div>

<style lang="scss">
  @import "../styles/mq.scss";

  .pageHeader {
    padding: 16px 0;
    padding-right: 45px;
    font-family: var(--font-heading);
    background: linear-gradient(
      308deg,
      var(--color-sub) 30%,
      var(--color-main) 100%
    );
    overflow: hidden;
    @include mq() {
      padding: 102px 0 24px;
    }
    &.ja {
      font-family: var(--font-ja);
    }
    h1 {
      font-size: 40px;
      color: #fff;
      font-weight: bold;
      animation: fadeIn 0.5s ease-in-out;
      @keyframes fadeIn {
        0% {
          opacity: 0;
          transform: translateX(30%);
        }
        100% {
          opacity: 1;
        }
      }
      @include mq() {
        font-size: 48px;
        animation-duration: 0.8s;
      }
    }
  }
</style>

<script>
  // homeでは非表示
  if (
    location.pathname === import.meta.env.BASE_URL ||
    location.pathname === `${import.meta.env.BASE_URL}ja/`
  ) {
    document.querySelector(".pageHeader")?.classList.add("hidden");
  }
</script>
